<!DOCTYPE html>
<html>

<head>
    <title>login</title>
    <% include ../partials/bootstrap %>
</head>

<body class="full-screen login">
    <div class="wrapper">
        <div class="container">
          <div class="row">
            <div class="col-md-4 col-sm-6 ml-auto mr-auto">
              <div class="card card-register">
                <h2 class="card-title">Login</h2>
                <form class="register-form" action="/login" method="post">
                  <label>Email</label>
                  <input type="email" class="form-control no-border" placeholder="Email" name="email"><br>
                  <label>Password</label>
                  <input type="password" class="form-control no-border" placeholder="Password" name="password"><br>
                  <button class="btn btn-success btn-block btn-round">Login</button>
                    <center> <h6>Don't have any account yet? Register as you please</h6> </center>
                    <div class="col-md-6">
                      <a href="/register/user" class="btn btn-primary btn-block btn-round">User</a>
                    </div>
                    <div class="col-md-6">
                      <a href="/register/partner" class="btn btn-primary btn-block btn-round">Partner</a>
                    </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>

</html>
